<% layout('layouts/boilerplate.ejs') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form
      class="needs-validation"
      action="/campgrounds"
      method="POST"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="campground[title]">Title</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="campground[location]">Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>

      <div class="mb-3">
        <label for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label" required>$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            name="campground[price]"
            placeholder="0.00"
            aria-label="campground[price]"
            aria-describedby="price-label"
            required
          />
          <div class="valid-feedback">Looks Good!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="campground[description]"
          >Description</label
        >
        <textarea
          class="form-control"
          type="text"
          name="campground[description]"
          required
        ></textarea>
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="formFileMultiple" class="form-label"> Upload Images</label>
        <input
          class="form-control"
          name="image"
          type="file"
          id="formFileMultiple"
          multiple
        />
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
    <a href="/campgrounds">back to all campgrounds</a>
  </div>
</div>
